<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    android:layout_margin="5dp"
    tools:context=".ComponenteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="#9A7A5CCA">



        <EditText
        android:background="@drawable/borda"
        android:drawableRight="@drawable/ic_baseline_alternate_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/insira_seu_e_mail"
        android:inputType="textEmailAddress"
        android:maxLength="100"
        />

        <EditText
        android:background= "@drawable/borda"
        android:drawableRight="@drawable/ic_baseline_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/insira_sua_senha"
        android:inputType="textPassword"
        android:maxLength="100"
        />
    </LinearLayout>
</LinearLayout>